#include <stdio.h>

int main ()
{
  int snum,num,max=0,min=0,i;
  scanf("%d",&snum);

  for(i=0;i<snum;i++)
  {
    scanf("%d",&num);

    if(i==0)
    {
      max=num;min=num;
    }
    else
    {
      if(num>max)
      max=num;
      if(num<min)
      min=num;
    }
  }
  printf("%d",max-min);
  return 0;
}
